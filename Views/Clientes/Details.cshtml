@model EstacionamientoMVC.Models.Cliente

@{
    ViewData["Title"] = @AliasGUI.Details;
}



<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CUIT)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CUIT)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DNI)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DNI)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <h4>@Html.DisplayNameFor(Model => Model.Direccion)</h4>
    @if (Model.Direccion != null)
    {
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Direccion.Calle)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Direccion.Calle)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Direccion.Numero)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Direccion.Numero)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Direccion.Piso)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Direccion.Piso)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Direccion.Departamento)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Direccion.Departamento)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Direccion.CodigoPostal)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Direccion.CodigoPostal)
    </dd>
</dl>
    }
    else
    {
        <h6>No hay dirección registrada</h6>
    }
</div>
<div>
    <h4>@Html.DisplayNameFor(Model => Model.Telefonos)</h4>
    @if (Model.Telefonos.Any())
    {
        <ul>
            @foreach (Telefono tel in Model.Telefonos)
            {
                <li>@tel.NumeroCompleto</li>
            }
        </ul>
    }
    else
    {
        <h6>No hay telefonos cargados</h6>
    }


</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@AliasGUI.Details</a> |
    <a asp-action="Index">@AliasGUI.BackToList</a>
</div>
